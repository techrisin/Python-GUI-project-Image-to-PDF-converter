#:import ScreenManager kivy.uix.screenmanager 
#:import MDScreen kivymd.uix.screen 

ScreenManager:
    id: sm
	MainScreen:
    InfoScreen:
    CreditScreen:

<InfoScreen@MDScreen>:
    name: "info"
    # md_bg_color: self.theme_cls.backgroundColor
    md_bg_color: 0.0196,0.4275,0.3961,1
    MDFloatLayout:
        MDLabel:
            text : "How to Use"
            pos_hint: {"center_x": .5, "center_y": .87}
            bold: True
            text_color : "red" #self.theme_cls.primaryColor
            theme_font_name: "Custom"
            font_name: "assets/fonts/DMSerifDisplay-Regular.ttf"
            text_color : 1,1,1,1
            theme_font_size: "Custom"
            font_size: "30dp"
            halign : "center"
        MDLabel:
            text : "1. Click Convert to start\n\n2. Select one or many images by tapping them once\n\n3.  Second tap will deselect them\n\n4. If you want to convert\n   all the images in a folder, click the\n   All in folder checkbox and choose any one image"
            pos_hint: {"x": .1, "top": 1}
            theme_font_name: "Custom"
            font_name: "assets/fonts/DMSerifDisplay-Regular.ttf"
            text_color : 1,1,1,1
            theme_font_size: "Custom"
            font_size: "20dp"
        MDButton:
            id : otpbutton
            style: "elevated"
            pos_hint: {"center_x": .5, "center_y": 0.18}
            # theme_bg_color: "Custom"
            # md_bg_color: "brown"
            ripple_scale: 0
            on_press : app.showmainscreen()
            
            MDButtonText:
                text: "Back"

